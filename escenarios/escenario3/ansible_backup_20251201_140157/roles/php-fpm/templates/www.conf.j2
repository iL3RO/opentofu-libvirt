[www]
user = www-data
group = www-data

; Escuchar en todas las interfaces en el puerto 9000
listen = 0.0.0.0:9000

listen.owner = www-data
listen.group = www-data
listen.mode = 0660

; IMPORTANTE: Permitir conexiones desde el servidor nginx
listen.allowed_clients = {{ nginx_ip }}

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

; Variables de entorno necesarias
env[HOSTNAME] = $HOSTNAME
env[PATH] = /usr/local/bin:/usr/bin:/bin
env[TMP] = /tmp
env[TMPDIR] = /tmp
env[TEMP] = /tmp

; Habilitar el manejo de rutas de archivos
php_admin_value[cgi.fix_pathinfo] = 0
